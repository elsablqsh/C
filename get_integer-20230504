#include <stdio.h>

int get_integer();
int add (int x, int y);
int mul (int x, int y);
int diff(int x, int y);
int div (int x, int y);
int main(void){

int x, y;
x = get_integer();
y = get_integer();
printf("두수의 합은 : %d", add(x, y));
printf("두수의 곱은 : %d", mul(x, y));
printf("두수의 차는 : %d", diff(x, y));
printf("두수의 몫 : %d", div(x,y));


return 0;
}

int get_integer()
{

int value;
printf("정수를 입력하시오:");
scanf("%d", &value);
return value;
}

int add(int x, int y);
{
return x + y;
}

int mul(int x, int y);
{
return x * y;
}

int diff(int x, int y);
{
return x - y;
}

int div(int x, int y);
{
return x/y;
}

return 0;
}

factorial pt2 :

#include <stdio.h>
int factorial(int n)
{

if(n==0)
return 1;
else
return n*factorial(n-1);
}

int main(){

int n;
printf("수를 입력하시오:");
scanf("%d", &n);
printf("%d", factorial(n));

return 0;
}
